<%- include partials/header -%>

    <h1>Home Page</h1>
    <p> <%= homeContent %> </p>

    <% posts.forEach((post) => { %>
    <% let truncatedContent = '' %>
    <% if (post.content.length > 100) {truncatedContent = post.content.substring(0, 100) + ' [...]'} else {  truncatedContent = post.content } %>
        <h1><%= post.title %></h1>
        <p><%= truncatedContent %> <a href="/posts/<%= post.title %>">  Read More</a></p>
    <% }); %>

<%- include partials/footer -%>