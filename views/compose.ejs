<%- include partials/header -%>

<h1>Compose</h1>

<form method="post" action="/compose">
    <div class="form-group">
        <label for="postTitleInput">Title</label>
        <input type="text" class="form-control" name="postTitle" id="postTitleInput" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="postContentInput">Post</label>
        <textarea class="form-control" name="postContent" id="postContentInput" rows="5"placeholder="covfefe"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include partials/footer -%>